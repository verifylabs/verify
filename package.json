{
  "name": "verify-app",
  "version": "0.0.1",
  "main": "index.js",
  "license": "Appache-2.0",
  "workspaces": [
    "packages/**",
    "design-system/**"
  ],
  "engines": {
    "node": ">=16",
    "pnpm": ">=7"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "deps:update": "updates -gu && pnpm -r exec updates -gu",
    "lint:check": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "pnpm lint:check --fix",
    "lint": "run-s lint:check prettier:check",
    "prettier:check": "prettier --check .",
    "prettier:format": "prettier --write ."
  },
  "devDependencies": {
    "@babel/core": "^7.20.2",
    "@next/eslint-plugin-next": "^13.0.2",
    "@nomicfoundation/hardhat-toolbox": "^2.0.0",
    "@types/node": "^18.11.9",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.8",
    "dotenv": "^16.0.3",
    "eslint": "^8.26.0",
    "fs-extra": "^10.1.0",
    "hardhat": "^2.12.2",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "turbo": "^1.6.3",
    "typescript": "^4.8.4",
    "updates": "^13.1.13"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowAny": [
        "@babel/core",
        "graphql",
        "react",
        "react-dom"
      ],
      "ignoreMissing": [
        "@babel/core",
        "graphql",
        "react",
        "react-dom"
      ]
    }
  }
}
